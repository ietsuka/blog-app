<div class="content_area">
  <% posts.each do |post| %>
    <div class="content_info">
      <%= link_to post_path :id => post.id do %>
        <div class="thumbnail_area">
          <% if post.post_image.attached? %> 
            <%= image_tag post.post_image, size: '300x300', class: "thumbnail_image" %> 
          <% else %> 
            <%= image_tag "/no_image.png", class: "thumbnail_image" %>
          <% end%>
        </div>
      <% end %>
      <div class="info_area">
        <h2>タイトル:
          <%= link_to post_path :id => post.id do %>
            <%= post.title %>
          <% end %>
        </h2>
        <p>日付:<%= l post.created_at, format: :long %></p>
        <% if post.user_id? %> 
          <p>作者:
            <%= link_to mypage_user_path :id => post.user.id do %>
              <%= post.user.name %>
            <% end %>
          </p>
        <% end %>
        <p>コメント数:<%= post.comments.length%></p>
      </div>
    </div>
  <% end %>
  <%= paginate posts %>
</div>