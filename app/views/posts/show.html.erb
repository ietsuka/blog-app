<body>
  <article>
    <div class="container">
      <section class="main_area">
        <section class="content_area">
          <p><%= l @content.created_at, format: :long %></p>
          <h1><%= @content.title %></h1>
          <p class="blog_area"><%= @content.script %></p>
        </section>
        <section class="comment_area">
        <% if @comments.present? %>
          <% @comments.each do |c| %>
            
            <p><%= l c.created_at, format: :long %></p>
            <p><%= c.name %></p>
            <p><%= c.comment %></p>
            <% if logged_in? and @content.user_id == current_user.id %>
              <div class="btn_area">
                <div class="comment_edit_buttom">
                  <button id="open">編集</button>
                </div>
                <div id="overlay"></div>
                <div id="modalWindow">
                  <p>コメントの編集ができます。</p>
                  <%= form_for(@comment, url: edit_comment_path(c.id), method: :get) do |f| %>
                    <%= f.label :comment , class: "form-control-label"%>
                    <%= f.text_area :comment, class: "form-control", value: c.comment, size: "50x10" %>
                    <%= f.submit "編集", class: "btn"%>
                  <% end%>
                  <button id="close">閉じる</button>
                </div>
                <div class="content_delete_buttom">
                  <%= link_to c, method: :delete do %>
                    <button>削除</button>
                  <%end%>
                </div>
              </div>
            <% end%>
          <% end%>
        <% else %>
          <p>コメントはありません！</p>
        <% end %>
        </section>
        <section class="input_comment_area">
          <%= form_for @comment, :html => { role: 'form', :id => "comment_form" } do |f| %>
            <%= render 'layouts/error_form', model: @new_comments %>
            <p>名前</p>
            <%= f.text_field :name %>
            <p>コメント</p>
            <%= f.text_area :comment, size: "90x10" %>
            <%= f.hidden_field :content_id, value: @content.id %><br>
            <%= f.submit "投稿", class: "bottom_area", class: "btn" %>
          <% end %>
        </section>
      </section>
      <section class="sidebar_area">
        <% if logged_in? and @content.user_id == current_user.id %>
          <div class="btn_area">
            <div class="content_edit_buttom">
              <%= link_to "編集", edit_post_path(@content), class: "btn", method: :get %>
            </div>
            <div class="content_delete_buttom">
              <%= link_to "削除", post_path(@content), class: "btn", method: :delete %>
            </div>
          </div>
        <% end %>
        <div class="profile_thumbnail_area">
          <% if @content.user.profile_thumbnail %> 
            <%= image_tag "/profile_images/#{@user.id}/#{@content.user.profile_thumbnail}", size: '300x300', class: "profile_thumbnail" %> 
          <% else %> 
            <%= image_tag "/no_image.png", class: "thumbnail_image" %>
          <% end%>
        </div>
        <div class="name_area">
          <%= @content.user.name %>
        </div>
        <% if @content.user.profile %> 
          <div class="profile_area">
            <%= @content.user.profile %>
          </div>
        <% end%>
        <% if @content.user.birthday %> 
          <div class="birthday_area">
            <%= l @content.user.birthday, format: :long %>
          </div>
        <% end%>
      </section>
    </div>
  </article>
</body>